# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ==========================================
# Application Settings
# ==========================================
APP_NAME=StellarOrbit
APP_ENV=production
DEBUG=False
PORT=5000

# ==========================================
# Kaggle API Credentials
# ==========================================
# Get these from https://www.kaggle.com/account
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# ==========================================
# Database (if applicable)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stellarorbit
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ==========================================
# API Keys (if applicable)
# ==========================================
API_KEY=your_api_key
SECRET_KEY=your_secret_key_here

# ==========================================
# Model Configuration
# ==========================================
FIRE_MODEL_PATH=/app/models/fire_model.h5
WATER_MODEL_PATH=/app/models/water_model.h5

# ==========================================
# Storage
# ==========================================
DATA_PATH=/app/data
LOGS_PATH=/app/logs
MODELS_PATH=/app/models

# ==========================================
# Frontend (if applicable)
# ==========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ==========================================
# Docker Hub (for CI/CD)
# ==========================================
DOCKERHUB_USERNAME=your_dockerhub_username
# DOCKERHUB_TOKEN should be set in GitHub Secrets, not here!

# ==========================================
# Other Services
# ==========================================
REDIS_URL=redis://localhost:6379
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name
